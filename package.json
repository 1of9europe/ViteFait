{
  "name": "vitefait",
  "version": "1.0.0",
  "description": "Application de conciergerie urbaine - Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "mobile",
    "web"
  ],
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "dev:web": "cd web && npm run dev",
    "dev": "npm run dev:backend & npm run dev:mobile & npm run dev:web",
    "build:backend": "cd backend && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:web": "cd web && npm run build",
    "build": "npm run build:backend && npm run build:mobile && npm run build:web",
    "test:backend": "cd backend && npm test",
    "test:backend:unit": "cd backend && npm run test:unit",
    "test:backend:integration": "cd backend && npm run test:integration",
    "test:mobile": "cd mobile && npm test",
    "test:web": "cd web && npm test",
    "test": "npm run test:backend && npm run test:mobile && npm run test:web",
    "test:karate": "cd backend && ./run-karate-tests.sh",
    "test:karate:ci": "cd backend && ./run-karate-tests.sh ci",
    "test:karate:simple": "cd backend && ./run-karate-simple.sh",
    "test:karate:auth": "cd backend && ./run-karate-tests.sh dev auth",
    "test:karate:missions": "cd backend && ./run-karate-tests.sh dev missions",
    "test:karate:payments": "cd backend && ./run-karate-tests.sh dev payments",
    "lint:backend": "cd backend && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "lint:web": "cd web && npm run lint",
    "lint": "npm run lint:backend && npm run lint:mobile && npm run lint:web",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "lint:fix:mobile": "cd mobile && npm run lint:fix",
    "lint:fix:web": "cd web && npm run lint:fix",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:mobile && npm run lint:fix:web",
    "install:all": "npm install && cd backend && npm install && cd ../mobile && npm install && cd ../web && npm install",
    "clean": "rm -rf node_modules backend/node_modules mobile/node_modules web/node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitefait/vitefait.git"
  },
  "keywords": [
    "conciergerie",
    "urbaine",
    "mobile",
    "backend",
    "typescript",
    "react-native"
  ],
  "author": "ViteFait Team",
  "license": "MIT"
} 